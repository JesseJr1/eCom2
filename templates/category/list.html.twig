{% extends 'base.html.twig' %}

{% block title %}eCom2 | Liste des catégories{% endblock %}

{% block body %}
    <h1>Catégories</h1>

    <ul>
        {% for category in categories %}
            <li><a href="{{ path('app_category', { id: category.id }) }}">{{ category.title }}</a></li>
        {% endfor %}
    </ul>
            
{% endblock %}  